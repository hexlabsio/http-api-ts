{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2018",
    "pretty": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}
